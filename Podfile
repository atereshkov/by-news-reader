  pod 'Swinject', '~> 2.7'
  pod 'FeedKit', '~> 9.0'
  pod 'RealmSwift', '~> 4.3'
  
  # Support
  pod 'BugfenderSDK', '~> 1.8'
  pod 'SwiftTheme', '~> 0.4'
  pod 'PinLayout', '~> 1.8'
  
  # Code improvements
  pod 'SwiftLint'
  pod 'SwiftGen', '~> 5.3'
  
  # Analytics, app stability reports, Firebase, etc
  pod 'Firebase/Crashlytics'
  pod 'Firebase/Analytics'
  
  target 'RSS-News-Tests' do
      inherit! :search_paths
  end

end

